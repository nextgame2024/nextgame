<div class="grid grid-cols-2 h-screen">
  <div class="relative bg-black border-4 border-yellow-500">
    <div class="absolute top-0 left-0 w-1/5 h-1/4 bg-black flex items-center justify-center text-white border-4 border-black">
      <a href="#" data-modal-target="finishGameModal-{{ id }}">
        <div class="mb-2 text-yellow-500 text-xl lg:text-xl text-center">Finish match</div>
        <img src="{{ profiles ~ 'NextGame.png' }}" class="inline-block" />
      </a>
    </div>
    <div class="absolute top-0 right-0 w-1/5 h-1/4 bg-yellow-500 flex items-center justify-center text-white border-4 border-black">
      <span class="text-6xl lg:text-9xl text-black font-bold" id="setsPlayerTwo">{{ setPlayerTwo }}</span>
    </div>
    <div class="absolute inset-y-1/2 left-0 transform -translate-y-1/2 w-1/5 h-1/5 flex flex-col items-center justify-center gap-5">
      <a href="#" class="text-white text-xl lg:text-2xl relative group" onclick="updateScore({{ id }}, {{ playerIdTwo }})">
        <div class="flex items-center">
          <i class="fa-solid fa-circle-plus text-5xl lg:text-7xl"></i>
        </div>
      </a>
      <a href="#" class="text-white text-xl lg:text-2xl relative group" onclick="subtractScore({{ id }}, {{ playerIdTwo }})">
        <div class="flex items-center">
          <i class="fa-solid fa-circle-minus text-5xl lg:text-7xl"></i>
        </div>
      </a>
    </div>
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-3/5 h-1/5 bg-black flex items-center justify-center text-white border-4 border-black">
      <a href="{{ path('app_umpire', {id: id, display: 0}) }}" class="text-whitw text-xl lg:text-2xl relative group" onclick="showLoadingSpinner()">
        <div class="flex items-center">
          <span class="text-2xl lg:text-xl text-white font-bold">{{ playerTwoName }}</span>
          <i class="fa-solid fa-circle-right ml-3 text-3xl lg:text-5xl"></i>
        </div>
      </a>
    </div>
    <div class="h-full flex items-center justify-center">
      <span class="text-9xl lg:text-[30rem] text-yellow-500 font-bold" id="playerTwo">{{ pointsPlayerTwo }}</span>
    </div>
  </div>

  <div class="relative bg-black border-4 border-yellow-500">
    <div class="absolute top-0 right-0 w-1/5 h-1/4 bg-black flex items-center justify-center text-white border-4 border-black">
      <button type="button" class="text-yellow-500 text-xl lg:text-xl relative group" data-modal-target="finishSetModal-{{ id }}">
        <div class="mb-2">Finish game</div>
        <i class="fa-solid fa-circle-check text-5xl lg:text-7xl ml-2"></i>
      </button>
    </div>
    <div class="absolute top-0 left-0 w-1/5 h-1/4 bg-yellow-500 flex items-center justify-center text-white border-4 border-black">
      <span class="text-6xl lg:text-9xl text-black font-bold" id="setsPlayerOne">{{ setPlayerOne }}</span>
    </div>
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-3/5 h-1/5 bg-black flex items-center justify-center text-white border-4 border-black">
      <a href="{{ path('app_umpire', {id: id, display: 0}) }}" class="text-white text-xl lg:text-2xl relative group" onclick="showLoadingSpinner()">
        <div class="flex items-center">
          <i class="fa-solid fa-circle-left mr-3 text-3xl lg:text-5xl"></i>
          <span class="text-2xl lg:text-xl text-white font-bold">{{ playerOneName }}</span>
        </div>
      </a>
    </div>
    <div class="absolute inset-y-1/2 right-0 transform -translate-y-1/2 w-1/5 h-1/5 flex flex-col items-center justify-center gap-5">
      <a href="#" class="text-white text-xl lg:text-2xl relative group" onclick="updateScore({{ id }}, {{ playerIdOne }})">
        <div class="flex items-center">
          <i class="fa-solid fa-circle-plus text-5xl lg:text-7xl"></i>
        </div>
      </a>
      <a href="#" class="text-white text-xl lg:text-2xl relative group" onclick="subtractScore({{ id }}, {{ playerIdOne }})">
        <div class="flex items-center">
          <i class="fa-solid fa-circle-minus text-5xl lg:text-7xl"></i>
        </div>
      </a>
    </div>
    <div class="h-full flex items-center justify-center">
      <span class="text-9xl lg:text-[30rem] text-yellow-500 font-bold" id="playerOne">{{ pointsPlayerOne }}</span>
    </div>
  </div>
</div>
